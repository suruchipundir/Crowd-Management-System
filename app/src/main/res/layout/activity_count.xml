<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Count">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_above="@+id/findCountButton"
            android:layout_marginBottom="20sp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/countt"
            android:id="@+id/originalImage"
            />
        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Upload"
            android:onClick="se"
            android:id="@+id/findCountButton"
            />-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Find Count"
            android:onClick="onFindCountButtonClicked"
            android:id="@+id/findCountButton"
            />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/findCountButton"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/pb"/>

        <!--<ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/findCountButton"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/densityMap"
            />-->

        <TextView
            android:layout_below="@id/findCountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10sp"
            android:id="@+id/txtCount"
            />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/txtCount"
            android:layout_marginTop="10sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/densityMap"
            />

</RelativeLayout>